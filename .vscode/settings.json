// .vscode/settings.json
{
    "java.configuration.updateBuildConfiguration": "interactive",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.format.settings.url": ".vscode/eclipse-java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",
    "java.saveActions.organizeImports": true,
    "java.sources.organizeImports.starThreshold": 99,
    "java.sources.organizeImports.staticStarThreshold": 99,
    
    // 파일 연결 설정
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "application*.yml": "spring-boot-properties-yaml",
        "application*.yaml": "spring-boot-properties-yaml"
    },
    
    // 자동 저장 및 포맷
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll": true
    },
    
    // Spring Boot 관련 설정
    "spring-boot.ls.problem.application-properties.enabled": true,
    "spring-boot.ls.problem.application-yaml.enabled": true,
    
    // 탭 설정
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    
    // YAML 파일 설정
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced"
    },
    
    "[yml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced"
    },
    
    // Java 파일 설정
    "[java]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    
    // JSON 파일 설정
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    
    // 파일 탐색기 제외 설정
    "files.exclude": {
        "**/target": true,
        "**/.mvn": true,
        "**/logs": true,
        "**/*.log": true,
        "**/node_modules": true
    },
    
    // 검색 제외 설정
    "search.exclude": {
        "**/target": true,
        "**/logs": true,
        "**/*.log": true
    },
    
    // 워치 제외 설정
    "files.watcherExclude": {
        "**/target/**": true,
        "**/logs/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
    
    // Lombok 설정
    "java.configuration.runtimes": [],
    
    // 터미널 설정
    "terminal.integrated.cwd": "${workspaceFolder}",
    
    // Git 설정
    "git.ignoreLimitWarning": true,
    
    // 디버그 설정
    "java.debug.settings.enableRunDebugCodeLens": true,
    "java.debug.settings.hotCodeReplace": "auto",
    
    // 테스트 설정
    "java.test.config": {
        "workingDirectory": "${workspaceFolder}"
    }
}
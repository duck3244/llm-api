// .vscode/settings.json
{
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.format.settings.url": ".vscode/eclipse-java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",
    "java.saveActions.organizeImports": true,
    "java.sources.organizeImports.starThreshold": 99,
    "java.sources.organizeImports.staticStarThreshold": 99,
    // 자동 저장 및 포맷
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // Java 컴파일 설정
    "java.completion.enabled": true,
    "java.errors.incompleteClasspath.severity": "warning",
    "java.dependency.autoRefresh": true,
    // Lombok 지원
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -javaagent:\"${env:HOME}/.vscode/extensions/gabrielbb.vscode-lombok-*/server/lombok.jar\"",
    // 파일 연결 설정
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "application*.yml": "spring-boot-properties-yaml",
        "application*.yaml": "spring-boot-properties-yaml"
    },
    // Spring Boot 관련 설정
    "spring-boot.ls.problem.application-properties.enabled": true,
    "spring-boot.ls.problem.application-yaml.enabled": true,
    // 탭 설정
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // YAML 파일 설정
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced"
    },
    "[yml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced"
    },
    // Java 파일 설정
    "[java]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    // JSON 파일 설정
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    // 파일 탐색기 제외 설정
    "files.exclude": {
        "**/target": true,
        "**/.mvn": true,
        "**/logs": true,
        "**/*.log": true,
        "**/node_modules": true
    },
    // 검색 제외 설정
    "search.exclude": {
        "**/target": true,
        "**/logs": true,
        "**/*.log": true
    },
    // 워치 제외 설정
    "files.watcherExclude": {
        "**/target/**": true,
        "**/logs/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
    // Lombok 설정
    "java.configuration.runtimes": [],
    // 터미널 설정
    "terminal.integrated.cwd": "${workspaceFolder}",
    // Git 설정
    "git.ignoreLimitWarning": true,
    // 디버그 설정
    "java.debug.settings.enableRunDebugCodeLens": true,
    "java.debug.settings.hotCodeReplace": "auto",
    // 테스트 설정
    "java.test.config": {
        "workingDirectory": "${workspaceFolder}"
    },
    "java.home": "/usr/lib/jvm/java-17-openjdk-amd64",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-openjdk-amd64",
            "default": true
        }
    ]
}